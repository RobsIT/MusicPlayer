
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
}


<card class="cardMusicPlayer" >

    <div style="display: flex;">

    
        <card class="cardLibrary">
            <h6 style="color: white">Bibliotek</h6>
       
            <div class="d-flex justify-content-between">
                <a asp-route-playlistId="0">Alla låtar</a>
                <div class="dropdown">
                    <button type="button" class="btn btn-outline-dark btn-sm"  data-bs-toggle="dropdown">+</button>
                    <ul class="dropdown-menu" style="padding-left: 10px; background-color: darkgray">
                        <h6>Lägg till i Bibliotek</h6>
                        <div>
                            <form method="post">
                                <input type="file" name="AudioFileName" />
                                <button type="submit">Ladda upp låt</button>
                            </form>
                        </div>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <h6 style="color: white">Playlists</h6>
                <div class="dropdown">

                    <button class="btn btn-outline-dark btn-sm" data-bs-toggle="dropdown">+</button>
                    <ul class="dropdown-menu" style="padding-left: 10px; background-color: darkgray">
                        <h6>Skapa ny playlist</h6>
                        <div>
                            <form method="post">
                                <label asp-for="PlaylistObj.PlaylistName">Ange Playlist namn</label>
                                <input asp-for="PlaylistObj.PlaylistName" />
                                <input type="submit" class="btn-dark" value="Skapa" />
                            </form>
                        </div>
                    </ul>
                </div>
            </div>
        
            @foreach (var playlistItem in Model.PlaylistList)
            {
                if (playlistItem != null)
                {
                    int playlistId = playlistItem.Id;
                    <div class="d-flex justify-content-between">
                        <a asp-route-playlistId="@playlistItem.Id">@playlistItem.PlaylistName</a>
                        <form method="post">
                            <a asp-route-playlistId="@playlistItem.Id" asp-route-songId="@Model.SongId" class="btn-sm btn-dark">+</a>
                            <input type="submit" class="btn-dark" value="submit" />
                        </form>
                    </div>
            
                }
            }
        </card>
   
        <card class="cardPlaylistContent">
            @if (Model.PlaylistId > 0)
            {
                <h6 style="color: white">Playlist</h6>
                @foreach (var songInPlaylist in Model.SongsAddedToPlaylistsList)
                {
                    if (songInPlaylist != null)
                    {
                        var songName = Model.AllSongsList.Where(s => s.Id == songInPlaylist.SongFileId).FirstOrDefault();
                        var playlistName = Model.PlaylistList.Where(s => s.Id == songInPlaylist.PlaylistId).FirstOrDefault();

                        if (Model.PlaylistId == songInPlaylist.PlaylistId)
                        {
                            string audioPath = "/audio/" + songName.SongFileName;
                            <a href="#" onclick="playAudio('@audioPath', @songInPlaylist.SongFileId)" data-song-id="@songInPlaylist.SongFileId">
                                @songName.SongFileName
                            </a>
                        }
                    }
                }
            }

            else 
            {
                <h6 style="color: white">Alla låtar</h6>
                @foreach (var song in Model.AllSongsList)
                {
                    var songEconomy = Model.SongsEconomiesList.Where(se => se.SongId == song.Id).FirstOrDefault();
                    int songClicksFromDb = 0; 
                    
                    if(songEconomy != null)
                    {
                        songClicksFromDb = songEconomy.SongClicks;
                    }
                    
                    if (song != null)
                    {
                        string audioPath = "/audio/" + song.SongFileName;
                        <div class="d-flex justify-content-between">
                            <a href="#" onclick="playAudio('@audioPath', @song.Id)" data-song-id="@song.Id">@System.IO.Path.GetFileName(song.SongFileName)</a>
                            <div style="color: gray">@songClicksFromDb</div>
                            <a asp-route-songId="@song.Id" class="btn-sm btn-dark">+</a>
                        </div>
                    }

                }
            }

        </card>
    </div>
    <br />
    <card class="cardControlls" >

        <div id="player"  style="padding-top: 20px" >
            <audio id="audioPlayer" controls>
                <source id="audioSource" src="" type="audio/mpeg" />
                Din webbläsare stödjer inte ljuduppspelning.
            </audio>

            <!-- Tidslinje -->
            <input type="range" id="progressBar" value="0" max="100" style="width: 100%;" />

            <!-- Volymkontroll -->
            <label for="volumeControl" style="color: white">Volym:</label>
            <input type="range" id="volumeControl" min="0" max="0.025" step="0.001" value="0.025" />

            <!-- Kontrollknappar -->
            <div>
                <button onclick="pauseAudio()">Pausa</button>
                <button onclick="stopAudio()">Stoppa</button>
                <button onclick="playNext()">Nästa</button>
            </div>
        </div>
    </card>

</card>

<script src="~/js/AudioPlayer.js"></script>

